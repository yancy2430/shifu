
<van-cell-group>
  <van-swipe-cell wx:for="{{shifuData.foods}}" right-width="{{ 100 }}" left-width="{{ 0 }}">
  <van-cell  title="{{item.name}}" label="{{item.address}}" is-link />
  <view slot="right">
    <view class="action">
      <view bindtap="delFood" class="editbtn">修改</view>
      <view bindtap="delFood" class="delbtn">删除</view>
    </view>
  </view>
</van-swipe-cell>
</van-cell-group>
<view style="margin: 16px;">
  <van-button type="primary" block bind:click="addFood">添加食物</van-button>
</view>

